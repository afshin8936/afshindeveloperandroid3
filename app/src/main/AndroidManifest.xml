    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activity.MainActivity"
            android:label="افشین داداش نژاد">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.WeatherSampleActivity" />
        <activity android:name=".view.activity.Profile"
            android:label="اطلاعات کاربری"/>
        <activity android:name=".view.activity.PostsActivity" />
        <activity android:name=".view.activity.BotickActivity" android:label="بوتیک"/>
        <activity android:name=".view.activity.PostActivity" />
        <activity android:name=".view.activity.AnimationsMainActivity"/>
        <activity android:name=".view.activity.AnimationActivity"/>
    </application>

</manifest>